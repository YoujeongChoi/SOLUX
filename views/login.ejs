  <body>
    <%- include('nav.html') %>

    
    <div class="container">
        <form action="/login" method="POST">
            <h3 class="mt-4 text-center">로그인</h3>
            <div class="mb-3 mt-4 row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name = "id" id="email-input" placeholder="name@example.com">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                <input type="text" class="form-control" id="password-input" name = "pw">
                </div>
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button class="btn btn-info me-md-2" type="submit" name="login-btn">로그인</button>
                <!-- <button class="ml-3 btn btn-secondary" type="button" name="signUp-btn">회원가입</button> -->
            </div>
        </form>

    </div>


    <div class="container mt-5">
      <form action="/register" method="POST">
          <h3 class="mt-4 text-center">회원가입</h3>
          <div class="mb-3 mt-4 row">
              <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
              <div class="col-sm-10">
                  <input type="text" class="form-control" name = "id" id="email-input" placeholder="name@example.com">
              </div>
          </div>
          <div class="mb-3 row">
              <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
              <div class="col-sm-10">
              <input type="text" class="form-control" id="password-input" name = "pw">
              </div>
          </div>
          <div class="d-grid gap-2 d-md-flex justify-content-md-end">
              <button class="btn btn-info me-md-2" type="submit" name="login-btn">가입</button>
              <!-- <button class="ml-3 btn btn-secondary" type="button" name="signUp-btn">회원가입</button> -->
          </div>
      </form>

  </div>
    

      
    

